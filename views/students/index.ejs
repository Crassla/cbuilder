<%function toTitleCase( str ) { %>
    <%return str.split(/\s+/).map( s => s.charAt( 0 ).toUpperCase() + s.substring(1).toLowerCase() ).join( " " );%>
<%  } %>


<%= toTitleCase(username) %> Logged In 

<form action="/students/asadd/<%= username %>" method="POST">
    <%- include('_asform_fields') %> 
    <a href="/">Cancel</a>
    <button type="submit">Add Standard</button>
</form>

<h1><%= toTitleCase(username) %>'s Standards</h1>
<div>
    <% asdata.forEach(asdata => { %>
        <h4><%= "Name: AS" + asdata.asname %> 
        <%=", Date Due: " + asdata.asdate.split('T') %> </h4>
    <% }) %> 
</div>


<form action="/students/asdelete/<%= username %>" method="POST">
   <%- include('_asdeleteform_fields') %> 
    <a href="/">Cancel</a>
    <button type="submit">Delete Standard</button>
</form>
<br>
<form action="/students/asall/<% username %>" method="GET">
    <button type="submit">See Standards</button>
</form>


